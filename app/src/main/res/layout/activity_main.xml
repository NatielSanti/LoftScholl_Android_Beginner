<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
            android:id="@+id/btnMainNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nextTitle"
            android:textSize="@dimen/headerTextSize"
            android:layout_gravity="center_horizontal" android:layout_marginTop="100dp"/>
    <Button
            android:id="@+id/btnMainNewPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/toPayment"
            android:textSize="@dimen/headerTextSize"
            android:layout_gravity="center_horizontal" android:layout_marginTop="180dp"/>

</FrameLayout>